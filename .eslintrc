{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "rules": {
    "arrow-body-style": "warn",
    "semi": [
      "error",
      "never"
    ],
    "class-methods-use-this": 0,
    "no-use-before-define": 0
  }
}